<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context="kr.ac.hansung.deng.activity.ConnectActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="8dp"
            android:text="How to Connect"
            android:textAllCaps="false"
            android:textColor="#DFD6D6"
            android:textSize="35sp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="232dp"
            android:layout_height="@dimen/offline_map_dp_40_in_sw320dp"
            android:layout_below="@+id/textView"
            android:layout_marginStart="16dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/textview"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:text="와이파이를 켜주세요"
            android:textColor="#4397F3"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/offline_map_dp_40_in_sw320dp"
            android:layout_below="@+id/textView2"
            android:layout_marginStart="16dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/textview"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:text="드론과의 와이파이 연결을 확인하세요"
            android:textColor="#4397F3"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/offline_map_dp_40_in_sw320dp"
            android:layout_below="@+id/textView3"
            android:layout_marginStart="16dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/textview"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:text="연결 후 Reconnect 버튼으로 활성화 해주세요"
            android:textColor="#4397F3"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/textView4"
            android:layout_marginStart="16dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/textview"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:text="활성화 후 Open 버튼을 눌러서 비행을 즐기세요!"
            android:textColor="#4397F3"
            android:textSize="17sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/connect_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:src="@drawable/disconnected" />

        <Button
            android:id="@+id/btn_reConnect"
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="ReConnect"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/btn_open"
            android:layout_width="0dp"
            android:layout_height="61dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="Open"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:typeface="monospace" />
    </LinearLayout>

</LinearLayout>